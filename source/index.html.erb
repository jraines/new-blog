<h1 id='name'>Jeremy Raines</h1>
<div id="icons">
  <a href="http://www.github.com/jraines"><i class='fa fa-github'></i></a>
  <a href="http://www.twitter.com/jraines"><i class='fa fa-twitter'></i></a>
</div>

<h4> Articles </h4>
<ul class='articles'>
  <% blog.articles[0...100].each do |article| %>
     <% next if article.tags.include? 'chain'  %>
     <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
  <% end %>

</ul>

<h4> Notes </h4>
<ul class='articles'>
  <% blog.articles[0...100].each do |article| %>
     <% next unless article.tags.include? 'chain'  %>
     <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e, %4Y') %></span></li>
  <% end %>

</ul>


